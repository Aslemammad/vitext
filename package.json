{
  "name": "workspace",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "pnpm recursive --filter create-vite-pages --filter vitext --filter vite-pages-theme-basic exec -- npm version",
    "test": "run-s test-serve test-build",
    "test-serve": "jest",
    "test-build": "cross-env VITE_TEST_BUILD=1 jest",
    "debug-build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.34",
    "cross-env": "^7.0.3",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "~1.9.2",
    "prettier": "^2.3.0",
    "sirv": "^1.0.10",
    "slash": "^3.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.3",
    "vite": "^2.3.6"
  },
  "workspaces": ["packages/*", "packages/playground/*"],
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js,*.jsx": ["prettier --write"],
    "*.ts,*.tsx": ["eslint", "prettier --parser=typescript --write"],
    "*.html": ["prettier --write"]
  },
  "dependencies": {
    "-": "^0.0.1",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "D": "^1.0.0"
  }
}
