{
  "name": "workspace",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "ver": "pnpm recursive --filter create-vite-pages --filter vite-plugin-react-pages --filter vite-pages-theme-basic exec -- npm version",
    "ver:p": "npm run ver -- patch",
    "ver:mi": "npm run ver -- minor",
    "ver:major": "npm run ver -- major",
    "pub": "pnpm -r publish --filter create-vite-pages --filter vite-plugin-react-pages --filter vite-pages-theme-basic",
    "update-deps": "pnpm -r update -i -L",
    "update-local-deps": "pnpm update -r vite-plugin-mdx vite-plugin-react-pages vite-pages-theme-basic --workspace",
    "test-serve": "jest",
    "test-build": "cross-env VITE_TEST_BUILD=1 jest",
    "debug-build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest",
    "postinstall": "node ./scripts/linkBins.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@pnpm/link-bins": "^5.3.24",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.34",
    "jest": "^26.6.3",
    "playwright-chromium": "~1.9.2",
    "sirv": "^1.0.10",
    "slash": "^3.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.3",
    "vite-plugin-react-pages": "workspace:*",
    "vite-pages-theme-basic": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "react": "^17.0.1",
      "react-dom": "^17.0.1"
    }
  }
}
